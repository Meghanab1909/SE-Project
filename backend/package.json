{
  "name": "micro-donation-backend",
  "version": "1.0.0",
  "description": "Backend server for Micro Donation platform with MongoDB, Express, and test coverage reporting",
  "main": "server.js",
  "type": "module",
  "scripts": {
  "start": "node server.js",
  "test": "cross-env NODE_ENV=test mocha test/**/*.js --timeout 10000",
  "coverage": "cross-env NODE_ENV=test c8 --reporter=html --reporter=text npm test"
  },
  "dependencies": {
    "axios": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "mongodb": "^6.10.0"
  },
  "devDependencies": {
    "c8": "^10.1.3",
    "chai": "^4.3.7",
    "cross-env": "^10.1.0",
    "mocha": "^10.0.0",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "express",
    "mongodb",
    "coverage",
    "mocha",
    "c8",
    "micro-donation"
  ]
}
